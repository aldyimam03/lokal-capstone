<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80BCBD"
    tools:context=".onboarding.screens.SecondScreen">

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:src="@drawable/next_button_boarding"
        app:layout_constraintBottom_toBottomOf="@+id/tvSkip"
        app:layout_constraintStart_toEndOf="@+id/tvSkip"
        app:layout_constraintTop_toTopOf="@+id/tvSkip"
        app:layout_constraintVertical_bias="0.434" />

    <ImageView
        android:id="@+id/ivShapeOnBoarding2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/vector_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivOnBoarding2"
        android:layout_width="389dp"
        android:layout_height="665dp"
        android:src="@drawable/onboarding_page_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleOnBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:text="Tinggal duduk manis\ntrus scan pake DermCare"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLoading2"
        android:layout_width="108dp"
        android:layout_height="15dp"
        android:layout_marginBottom="144dp"
        android:src="@drawable/trancition_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>